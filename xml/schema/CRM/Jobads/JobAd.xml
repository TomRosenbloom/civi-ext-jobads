<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Jobads</base>
  <class>JobAd</class>
  <name>civicrm_job_ad</name>
  <comment>FIXME</comment>
  <log>true</log>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique JobAd ID</comment>
    <html>
      <type>Number</type>
    </html>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>contact_id</name>
    <type>int unsigned</type>
    <comment>FK to Contact</comment>
    <html>
      <type>EntityRef</type>
      <label>Contact</label>
    </html>
  </field>
  <foreignKey>
    <name>contact_id</name>
    <table>civicrm_contact</table>
    <key>id</key>
    <onDelete>CASCADE</onDelete>
  </foreignKey>

  <field>
    <name>job_title</name>
    <type>varchar</type>
    <required>true</required>
    <title>Job title</title>
    <length>255</length>
    <comment>Job title</comment>
    <html>
      <type>Text</type>
    </html>
  </field>

  <field>
    <name>summary</name>
    <title>Summary</title>
    <type>longtext</type>
    <comment>Short summary to go in the main listing</comment>
    <html>
      <type>RichTextEditor</type>
      <rows>8</rows>
      <cols>60</cols>
    </html>
  </field>

  <field>
    <name>description</name>
    <title>Full description</title>
    <type>longtext</type>
    <comment>Full description</comment>
    <html>
      <type>RichTextEditor</type>
      <rows>8</rows>
      <cols>60</cols>
    </html>
  </field>

  <field>
    <name>contract_type</name>
    <title>Contract type</title>
    <type>int unsigned</type>
    <required>true</required>
    <default>1</default>
    <comment>valid value, registered contract type</comment>
    <pseudoconstant>
      <optionGroupName>job_ads_contract_type</optionGroupName>
    </pseudoconstant>
    <html>
      <type>Select</type>
      <label>Contract type</label>
    </html>
  </field>


</table>
